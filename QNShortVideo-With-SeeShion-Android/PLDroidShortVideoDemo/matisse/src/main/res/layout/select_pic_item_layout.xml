<?xml version="1.0" encoding="utf-8"?>
<com.zhihu.matisse.internal.ui.widget.SquareFrameLayoutH xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/select_item_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="#ccc"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/select_delete_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:padding="4dp"
        android:src="@drawable/delphoto_icon"
        android:translationX="4dp"
        android:translationY="-4dp" />
</com.zhihu.matisse.internal.ui.widget.SquareFrameLayoutH>